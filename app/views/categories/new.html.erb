<% provide(:title, 'New Category') %>
<h1>Add new category for user <%= current_user.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@category) do |f| %>
	  <%= render 'fields', f: f %>
      <%= f.submit "Create new category", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
