<% provide(:title, 'New Category') %>
<h1>Add new category for user <%= current_user.name %></h1>

<div class="row">
  <aside class="span4">
	<section>
	<h5>To be in category:</h5>
	<% if @category.parent.nil? %>
		<%= link_to 'root_category', categories_path %>
	<% else %>	
		<%= link_to @category.parent.title, edit_category_path(@category.parent) %>		
	<% end %>
	</section>
	
	<section>
	<h5>Also in this category:</h5>
	<% if @subcategories.empty? %>
	Has no child categories
	<% else %>
	<ul class="subcategories">
	  <%= render @subcategories %>
	</ul>
	
	<%= will_paginate @subcategories %>
	
	<% end %>
	</section>
	
  </aside>
  <div class="span8">
    <%= form_for(@category) do |f| %>
	  <%= render 'fields', f: f %>
      <%= f.submit "Create new category", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
