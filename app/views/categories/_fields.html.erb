<%= render 'shared/error_messages', object: f.object %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :text %>
<%= f.text_area :text, size: "60x12" %>

<% if current_user.admin? %>
<%= f.label :user_id %>
<%= f.select :user_id, options_for_select(@persons, current_user.id) %>
<% end %>

<%= f.label :parent_id %>
<% if !@category.parent.nil? %>
	<%= 
	@current_cat = @category
	@collection = [@current_cat]
	collect(@current_cat)
	f.select :parent_id, options_for_select(@parcategories.delete_if { |item| item == [@category.title, @category.id] }, @category.parent.id) 
	%>
<% else %>
	<%= f.select :parent_id, options_for_select(@parcategories) %>
<% end %>

<%= 
@collections = @collection.map { |cat| [cat.title, cat.id] }
f.select :parent_id, options_for_select(@collections) %>