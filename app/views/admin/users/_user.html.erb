<li>
  <%= gravatar_for user %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
	| <%= link_to "edit", edit_admin_user_path(user) %>
    | <%= link_to "delete", admin_user_path(user), method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>